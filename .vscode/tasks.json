  "version": "2.0.0",
  "tasks": [
    {
      "label": "Abrir Allure Report",
      "type": "shell",
      "command": "npm run allure:open",
      "problemMatcher": []
    },
    {
      "label": "Abrir Cypress",
      "type": "shell",
      "command": "npm run cypress:open",
      "problemMatcher": []
    },
    {
      "label": "Executar todos os testes",
      "type": "shell",
      "command": "npm run test",
      "problemMatcher": []
    },
    {
      "label": "Rodar teste especifico (adicionar caminho no package.json)",
      "type": "shell",
      "command": "npm run cypress:run:spec:allure",
      "problemMatcher": []
    },
    {
      "label": "Rodar teste por tag (adicionar tag no package.json)",
      "type": "shell",
      "command": "npm run cypress:run:tag",
      "problemMatcher": []
    },
    {
      "label": "Fazer Lint do codigo",
      "type": "shell",
      "command": "npm run eslint",
      "problemMatcher": []
    },
    {
      "label": "Limpar diretorio de reports",
      "type": "shell",
      "command": "npm run delete:reports",
      "problemMatcher": []
    },
  ]
}

